# Financial API Keys - Replace with your actual keys

# Finnhub API (Financial Data)
# Get your key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_key_here

# Alpaca Trading API (Paper Trading)
# Get your keys at: https://app.alpaca.markets/paper/dashboard/overview
APCA_API_KEY_ID=your_alpaca_key_id
APCA_API_SECRET_KEY=your_alpaca_secret_key
APCA_API_BASE_URL=https://paper-api.alpaca.markets
APCA_DATA_URL=https://data.alpaca.markets

# Federal Reserve Economic Data API
# Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key

# Tavily Search API (AI-powered search)
# Get your key at: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key

# Optional: OpenAI API Key (if using OpenAI models)
# OPENAI_API_KEY=your_openai_key

# Optional: Anthropic API Key (if using Claude models)
# ANTHROPIC_API_KEY=your_anthropic_key

# Binance API (for crypto data)
# Get your keys at: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# Database Configuration (PostgreSQL with pgvector)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_agent
DB_USER=postgres
DB_PASSWORD=postgres

# Modal Configuration
MODAL_TOKEN_ID=your_modal_token_id
MODAL_TOKEN_SECRET=your_modal_token_secret
